// ex: set ft=jsonc :
// @see @see https://microsoft.github.io/pyright/#/configuration
{
  "venvPath": ".",
  "venv": ".venv",
  // Disabled type checks due to getting a lot of false errors (for django models) like these:
  // `... Type "Literal[True]" cannot be assigned to type "type[NOT_PROVIDED]" (reportArgumentType)`
  "typeCheckingMode": "off",
  // "reportAttributeAccessIssue": false,
  "exclude": [
    "**/migrations",
    ".venv",
    ".vscode",
    "build",
    "*.egg-info",
    "*cache",
    "static/CACHE",
    "static/vendor",
    "src/vendor",
    "__pycache__",
    "node_modules"
  ]
}
